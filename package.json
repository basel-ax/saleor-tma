{
  "name": "saleor-tma",
  "version": "1.0.0",
  "description": "Telegram Mini App with Saleor integration - TypeScript",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:server": "tsx watch src/server.ts",
    "dev:frontend": "vite",
    "build": "tsc && vite build",
    "build:server": "tsc",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "start": "node dist/server.js",
    "setwebhook": "tsx src/scripts/setwebhook.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "node-telegram-bot-api": "^0.63.0",
    "graphql-request": "^6.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsx": "^4.6.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0"
  },
  "keywords": ["telegram", "mini-app", "saleor", "ecommerce", "typescript", "react"],
  "author": "",
  "license": "MIT"
}
