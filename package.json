{
  "name": "saleor-tma",
  "version": "1.0.0",
  "description": "Telegram Mini App with Saleor integration - TypeScript",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:server": "tsx watch src/server.ts",
    "dev:frontend": "vite",
    "build": "tsc && vite build",
    "build:server": "tsc",
    "build:worker": "esbuild src/worker.ts --bundle --outdir=dist --format=esm --platform=neutral --target=es2020",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "start": "node dist/server.js",
    "setwebhook": "tsx src/scripts/setwebhook.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest tests/api.test.ts",
    "test:integration": "jest tests/integration.test.ts",
    "deploy": "npm run build && npm run build:worker"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql-request": "^6.1.0",
    "node-telegram-bot-api": "^0.63.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250121.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.20.0",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wrangler": "^4.0.0"
  },
  "keywords": [
    "telegram",
    "mini-app",
    "saleor",
    "ecommerce",
    "typescript",
    "react"
  ],
  "author": "",
  "license": "MIT"
}
